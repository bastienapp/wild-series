{% extends 'base.html.twig' %}

{% block title %}Saison #{{ season.id }}
{% endblock %}

{% block body %}
	<div class="media">
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
			<p>{{ season.description }}</p>
            <ul>
            {% for episode in season.episodes %}
                <li>{{ episode.title }}</li>
            {% else %}
                Aucun épisode trouvé.
            {% endfor %}
            </ul>
		</div>
	</div>

	<a href="{{ path("program_show", { id: program.id }) }}">Retour à la série {{ program.title }}</a>
{% endblock %}
